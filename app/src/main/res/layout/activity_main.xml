<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">
    <ProgressBar
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/text_download"
        app:layout_constraintTop_toTopOf="parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="100"
        android:id="@+id/progress_download"
        android:layout_marginTop="40dp"
        android:layout_width="350dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/progress_download"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/progress_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#2979FF"
        android:textSize="20sp"
        android:id="@+id/text_download"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/progress_download"
        app:layout_constraintStart_toStartOf="parent"
        android:text="线程1"
        android:id="@+id/text_thread1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        app:layout_constraintStart_toEndOf="@id/text_thread1"
        app:layout_constraintTop_toTopOf="@id/text_thread1"
        app:layout_constraintBottom_toBottomOf="@id/text_thread1"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="100"
        android:layout_marginStart="12dp"
        android:id="@+id/progress_thread1"
        android:layout_width="275dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/text_thread1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="线程2"
        android:id="@+id/text_thread2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        app:layout_constraintStart_toEndOf="@id/text_thread2"
        app:layout_constraintTop_toTopOf="@id/text_thread2"
        app:layout_constraintBottom_toBottomOf="@id/text_thread2"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="100"
        android:layout_marginStart="12dp"
        android:id="@+id/progress_thread2"
        android:layout_width="275dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/text_thread2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="线程3"
        android:id="@+id/text_thread3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        app:layout_constraintStart_toEndOf="@id/text_thread3"
        app:layout_constraintTop_toTopOf="@id/text_thread3"
        app:layout_constraintBottom_toBottomOf="@id/text_thread3"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="100"
        android:layout_marginStart="12dp"
        android:id="@+id/progress_thread3"
        android:layout_width="275dp"
        android:layout_height="20dp"/>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/text_thread3"
        app:layout_constraintStart_toStartOf="parent"
        android:text="线程4"
        android:id="@+id/text_thread4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        app:layout_constraintStart_toEndOf="@id/text_thread4"
        app:layout_constraintTop_toTopOf="@id/text_thread4"
        app:layout_constraintBottom_toBottomOf="@id/text_thread4"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="0"
        android:max="100"
        android:layout_marginStart="12dp"
        android:id="@+id/progress_thread4"
        android:layout_width="275dp"
        android:layout_height="20dp"/>
    <Button
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_thread4"
        android:id="@+id/start"
        android:text="开始"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_thread4"
        android:id="@+id/pause"
        android:text="暂停"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_thread4"
        android:id="@+id/cancel"
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>